<%= form_for @work do |f| %>
        
        <%= f.label :WHO, :class => 'label' %>
        <%= f.select :user_id, User.pluck(:name, :id), :include_blank => true, required: true %>

        <%= f.label :IMAGE, :class => 'label' %>
        <%= f.text_field :image_url, required: true %>
        
        <%= f.label :TITLE, :class => 'label'%>
        <%= f.text_field :title %>
   
        <%= f.label :HEIGHT, :class =>'label'%>
        <%= f.text_field :height %>

        <%= f.label :WIDTH, :class => 'label' %>
        <%= f.text_field :width %>

        <%= f.label :MEDIUM, :class => 'label' %>
        <%= f.text_field :medium %>

       
        <%= f.submit "show us", class: 'btn'  %>

<% end %>