<div class="show-wrap">
    <% if @work.title.present? %>
        <h1 class ="hone"><%= @work.title %></h1>
    <% else %>
        <h1 class ="hone"><%= "Untitled" %></h1>
    <% end %>
    <%= cl_image_tag @work.image_url, class: "bigimage" %>
    
    <ul class="work_description">
        <li class ="artist"><%= @work.user.name %></li>
         <% if @work.height.present?  %>
             <li class ="height"> <%= @work.height %></li>
        <% else %>
            <li class = "height"> <%= "Unknown" %></li>
        <% end %>
        <% if @work.width.present?%>
             <li class ="width" ><%= @work.width %></li>
        <% else %>
             <li class ="width"><%= "Unknown" %></li>
         <% end %>
        <li class ="medium"> <%= @work.medium %></li> 
        </ul>
</div>
<div class="controller">
    <% if @current_user == @work.user %>
    <%= link_to "edit", edit_work_path(@work), :class => 'btn'%>
    <%= link_to "delete", @work, :method => :delete, :data => { :confirm => 'are you sure?'}, class: 'btn'%>
    <% end %>
</div>

<%= render :partial => 'likes/new' %>
