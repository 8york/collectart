
<%= form_for(@work, :html => { :multipart => true }) do |f| %>
        
        <div class="form-wrap">
        <%= f.label :Who, :class => 'label' %>
        <%= f.text_field :user_id, :name => "user_id[name]", :value => @current_user.name, required: true %>
       
        <%= f.label :IMAGE, :class => 'label' %>
        <%= f.cl_image_upload :image_url, required: true %>
        
        <%= f.label :TITLE, :class => 'label'%>
        <%= f.text_field :title %>
   
        <%= f.label :HEIGHT, :class =>'label'%>
        <%= f.text_field :height %>

        <%= f.label :WIDTH, :class => 'label' %>
        <%= f.text_field :width %>

        <%= f.label :MEDIUM, :class => 'label' %>
        <%= f.text_field :medium %>

        <%= f.submit nil , class: 'form-btn'  %>
        </div>
<% end %>