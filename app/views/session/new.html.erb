<h1>Log in</h1>

<% if flash[:error]%>
<h2><%= flash[:error] %></h2>
<% end %>

<%= form_tag login_path do %>
    <%= label_tag :email, nil, :class => 'label' %>
    <%= email_field_tag :email %>

    <%= label_tag :password, nil, :class => 'label' %>
    <%= password_field_tag :password %>

    <%= submit_tag "sign in", class: "btn" %>
<% end %>
