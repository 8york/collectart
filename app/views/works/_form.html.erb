<%= form_for @work do |f| %>
        
        <div class="form-wrap">
        <%= f.label :WHO, :class => 'label' %>
        <%= f.text_field :user_id, :name => "user_id[name]", :value => @current_user.name, required: true %>
        <%# <%= f.select :user_id, options_for_select(User.where(id: @current_user.id).pluck(:name, :id)), :include_blank => true, required: true %>

        <%= f.label :IMAGE, :class => 'label' %>
        <%= f.text_field :image_url, required: true %>
        
        <%= f.label :TITLE, :class => 'label'%>
        <%= f.text_field :title %>
   
        <%= f.label :HEIGHT, :class =>'label'%>
        <%= f.text_field :height %>

        <%= f.label :WIDTH, :class => 'label' %>
        <%= f.text_field :width %>

        <%= f.label :MEDIUM, :class => 'label' %>
        <%= f.text_field :medium %>

        <%= f.submit nil , class: 'form-btn'  %>
        </div>
<% end %>