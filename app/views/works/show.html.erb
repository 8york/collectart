<h1><%= @work.title %></h1>

<%= cl_image_tag @work.image_url, :class => "bigimage" %>

<ul class="work_description">
        <li>WHO: <%= @work.user.name %></li>
         <% if @work.height.present?  %>
             <li>HEIGHT: <%= @work.height %></li>
        <% else %>
            <li>HEIGHT: <%= "Unknown" %></li>
        <% end %>
        <% if @work.width.present?%>
             <li>WIDTH: <%= @work.width %></li>
        <% else %>
             <li>WIDTH: <%= "Unknown" %></li>
         <% end %>
        <li>MEDIUM: <%= @work.medium %></li> 
</ul>
<div class="controller">
    <% if @current_user == @work.user %>
    <%= link_to "edit", edit_work_path(@work), :class => 'btn'%>
    <%= link_to "delete", @work, :method => :delete, :data => { :confirm => 'are you sure?'}, class: 'btn'%>
    <% end %>
</div>

<%= render :partial => 'likes/new' %>
